{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "node",
    "paths": {
        "markdown-it-sub": ["./node_modules/@akiravoid/markdown-it-sub"],
        "markdown-it-sup": ["./node_modules/@akiravoid/markdown-it-sup"],
        "markdown-it-ins": ["./node_modules/@akiravoid/markdown-it-ins"],
        "markdown-it-mark": ["./node_modules/@akiravoid/markdown-it-mark"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "src/templates/**/*.ts"]
}